<Window x:Class="TonWalletGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TonWalletGenerator"
        mc:Ignorable="d"
        Title="Ton Wallet Studio" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True"  WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" MinWidth="200">


    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,2,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Width" Value="22" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle x:Name="Rect" Fill="Transparent" Stroke="White" StrokeThickness="0" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Изменение фона при наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Rect" Property="Fill" Value="#555555" />
                            </Trigger>
                            <!-- Изменение фона при нажатии -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Rect" Property="Fill" Value="#444444" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>




    <Border Background="#324759" BorderThickness="1,0,1,1" BorderBrush="Black" SnapsToDevicePixels="True" >
        <StackPanel Orientation="Vertical">

            <DockPanel Height="22" Grid.Row="0" Background="#22303C" MouseDown="Grid_MouseDown" >
                <TextBlock DockPanel.Dock="Left" Margin="3" VerticalAlignment="Center" Text="Ton Wallet Studio" Foreground="#94A4B5" FontFamily="Roboto"/>

                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowControlButtonStyle}" >
                        <Viewbox Margin="0 8 0 0 " Width="22" Height="12" Stretch="Uniform">
                            <Canvas Width="22" Height="22">
                                <Path Fill="#94A4B5" Data="M20,14H4V10H20" />
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button Style="{StaticResource WindowControlButtonStyle}" >
                        <Viewbox Width="18" Height="16" Stretch="Uniform">
                            <Canvas Width="22" Height="22">
                                <Path Fill="#94A4B5" Data="M4,4H20V20H4V4M6,8V18H18V8H6Z" />
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button Style="{StaticResource WindowControlButtonStyle}" >
                        <Viewbox Width="18" Height="18" Stretch="Uniform">
                            <Canvas Width="22" Height="22">
                                <Path Fill="#94A4B5" Data="M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z" />
                            </Canvas>
                        </Viewbox>
                    </Button>
                </StackPanel>


            </DockPanel>
            
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" />

        </StackPanel>
    </Border>
</Window>
